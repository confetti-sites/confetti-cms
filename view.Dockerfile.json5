{
  // The container_name of this container is `view`.
  description: "The view container uses Nginx, PHP, and Blade to serve responses and assets.",
  sync_granted: [
    {
      // The Parser is an internal Confetti package to automatically create ORM classes.
      description: "The Confetti Parser requires access to the repository in order to parse components.",
      scheme: "source",
      readonly: false,
      expose_path: "/src",
      source_organization: "confetti-cms",
      source_repository: "parser",
      container_name: "*"
    },
    {
      description: "The admin tailwind container needs access to the pkg directory in order to get the html content of the packages.",
      scheme: "source",
      readonly: true,
      expose_path: "/src/pkg",
      container_name: "admin/tailwind",
    },
  ],
  sync_requested: [
    {
      description: "Get images so we can serve them with the web server",
      scheme: "images",
      readonly: true,
      destination_path: "/var/assets/**",
      source_organization: "confetti-cms",
      source_repository: "image",
      container_name: "*",
    },
    {
      description: "Get compiled assets (like tailwind css files) so we can serve them with the web server",
      scheme: "assets",
      readonly: true,
      destination_path: "/var/assets/**", // When using **, the assets will be stored in /var/assets/the_container_name
      container_name: "*",
    },
    {
        description: "Get generated classes by the parser",
        scheme: "model",
        readonly: true,
        destination_path: "/src/.confetti/db",
        source_organization: "confetti-cms",
        source_repository: "db",
        container_name: "confetti-cms/db",
    },
    {
        description: "Get generated classes by the parser",
        scheme: "model",
        readonly: true,
        destination_path: "/src/.confetti/parser",
        source_organization: "confetti-cms",
        source_repository: "parser",
        container_name: "confetti-cms/parser",
    }
  ]
}
