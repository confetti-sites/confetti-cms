{
  // The container_name of this container is `view`
  description: "The view container uses Nginx, PHP, and Blade to serve responses and assets.",
  sync_granted: [
    {
      /**
       * The Parser is an internal Confetti package. Do not remove this.
       */
      description: "The parser requires access to the entire repository in order to parse components.",
      scheme: "source",
      readonly: true,
      expose_path: "/src",
      source_organization: "confetti-cms",
      source_repository: "parser",
      container_name: "*"
    },
  ],
  sync_requested: [
    {
      description: "Sync images so we can serve them with the web server",
      scheme: "images",
      readonly: true,
      destination_path: "/var/storage/images/public",
      source_organization: "confetti-cms",
      source_repository: "image",
      container_name: "*",
    },
    {
      description: "Sync compiled assets (like tailwind css files) so we can serve them with the web server",
      scheme: "assets",
      readonly: true,
      destination_path: "/var/assets",
      container_name: "*",
    },
  ]
}


